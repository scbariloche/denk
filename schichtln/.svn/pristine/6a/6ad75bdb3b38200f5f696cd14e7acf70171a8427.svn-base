package com.example.andenk.schichtln.gui

import android.support.v7.app.AppCompatActivity
import android.os.Bundle
import android.support.v4.app.Fragment
import android.support.v4.app.FragmentManager
import android.support.v4.app.FragmentStatePagerAdapter
import com.example.andenk.schichtln.R
import kotlinx.android.synthetic.main.activity_main.*

class MainActivity : AppCompatActivity() {


    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        v_pager_main.adapter = VPagerAdapter(supportFragmentManager)
    }

    class VPagerAdapter(fm: FragmentManager?) : FragmentStatePagerAdapter(fm) {

        var ret: Fragment = Fragment()
        /**
         * Return the Fragment associated with a specified position.
         */
        override fun getItem(position: Int): Fragment {
            when (position) {
                0 -> ret = CalendarFragment()
                1 -> ret = ListFragment()
                2 -> ret = WebViewFragment()
            }

            return ret
        }

        /**
         * Return the number of views available.
         */
        override fun getCount(): Int {
            return 3
        }
    }
}
