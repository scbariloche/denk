<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    tools:context="com.example.andenk.schichtln.gui.PersonalFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_bottom_milky"
            android:paddingStart="4dp"
            android:text="meine Schichten"
            android:textColor="@color/greyish"
            android:textSize="24sp" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="99">

            <ListView
                android:id="@+id/list_user_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_bottom_milky"
            android:paddingStart="4dp"
            android:text="offene Schichten"
            android:textColor="@color/greyish"
            android:textSize="24sp" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="99">

            <ListView
                android:id="@+id/list_open_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>
