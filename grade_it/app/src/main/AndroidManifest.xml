<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thinkad.grade_it">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>
        <activity
            android:name=".gui.dialogs.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.dialogs.AddExamDialog"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar"></activity>
        <activity
            android:name=".gui.dialogs.AddSubjectDialog"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"></activity>
        <activity
            android:name=".gui.dialogs.SelectWeightDialog"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"></activity>
        <activity
            android:name=".gui.dialogs.CreateWeightDialog"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"></activity>
        <activity
            android:name=".gui.dialogs.ImprintDialog"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".gui.dialogs.MyDatePickerDialog"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"></activity>
    </application>

</manifest>